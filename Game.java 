import java.util.Scanner;
import java.util.Random;

public class Play {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        Random random = new Random();

        System.out.println("=== Welcome to Little Professor ===");
        System.out.println("You will get 10 math questions.");
        System.out.println("Choose your difficulty level (k):");
        System.out.println("0 - Easy (0 to 9)");
        System.out.println("1 - Medium (0 to 50)");
        System.out.println("2 - Hard (0 to 100)");
        System.out.print("Enter level: ");
        int k = input.nextInt();

        int maxRange;
        if (k == 0) {
            maxRange = 9;
        } else if (k == 1) {
            maxRange = 50;
        } else {
            maxRange = 100;
        }

        int score = 0;

        for (int i = 1; i <= 10; i++) {
            int num1 = random.nextInt(maxRange + 1);
            int num2 = random.nextInt(maxRange + 1);

            int operation = random.nextInt(4)
            int correctAnswer = 0;
            String symbol = "";

            switch (operation) {
                case 0:
                    correctAnswer = Calculate.add(num1, num2);
                    symbol = "+";
                    break;
                case 1:
                    correctAnswer = Calculate.sub(num1, num2);
                    symbol = "-";
                    break;
                case 2:
                    correctAnswer = Calculate.multiply(num1, num2);
                    symbol = "*";
                    break;
                case 3:
                    
                    num2 = random.nextInt(maxRange - 1) + 1; // avoid 0
                    correctAnswer = Calculate.div(num1 * num2, num2);
                    num1 = num1 * num2;
                    symbol = "/";
                    break;
            }

            System.out.print("Question " + i + ": " + num1 + " " + symbol + " " + num2 + " = ");
            int userAnswer = input.nextInt();

            if (userAnswer == correctAnswer) {
                System.out.println("Correct! \n");
                score++;
            } else {
                System.out.println("Wrong  The correct answer is: " + correctAnswer + "\n");
            }
        }

        System.out.println("=== Game Over ===");
        System.out.println("Your final score: " + score + " / 10");

        if (score == 10) {
            System.out.println("Excellent! ");
        } else if (score >= 7) {
            System.out.println("Good job!");
        } else {
            System.out.println("Keep practicing!");
        }

        input.close();
    }
}